set backspace=indent,eol,start
set hlsearch
set incsearch
set expandtab
set autoindent
set tabstop=4
set shiftwidth=4

nnoremap <space>l :noh<cr>

nnoremap <space><space> :vsc Edit.NavigateTo<cr>

