set nocompatible

set number
set relativenumber

set shiftwidth=4
set tabstop=4
set softtabstop=4
set expandtab

set encoding=utf8
set nowrap
set textwidth=72

set splitright
set splitbelow

set incsearch
set ignorecase
set smartcase
set showmatch
set hlsearch

set nofoldenable

cnoreabbrev W! w!
cnoreabbrev Q! q!
cnoreabbrev Qa! qa!
cnoreabbrev Wq wq
cnoreabbrev Wa wa
cnoreabbrev wQ wq
cnoreabbrev WQ wq
cnoreabbrev W w
cnoreabbrev Q q
cnoreabbrev Qa qa

filetype plugin indent on
syntax on
