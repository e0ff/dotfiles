{
    "workbench.colorTheme": "Pitch Black",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.activityBar.visible": false,
    "workbench.startupEditor": "none",
    "telemetry.telemetryLevel": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.renderWhitespace": "trailing",
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.occurrencesHighlight": false,
    "explorer.experimental.fileNesting.enabled": true,
    "files.insertFinalNewline": true,
    "window.newWindowDimensions": "maximized",
    "editor.fontFamily": "Iosevka, 'monospace', monospace",
    "editor.fontSize": 16,
    "editor.codeLensFontSize": 12,
    "scm.inputFontSize": 12,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "search.showLineNumbers": true,
    "files.trimTrailingWhitespace": true,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    // vim
    "vim.leader": "<space>",
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.highlightedyank.enable": true,
    "vim.easymotion": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "<space>"
            ],
            "commands": [
                "workbench.action.showCommands"
            ]
        },
        // code
        {
            "before": [
                "<leader>",
                "c",
                "c"
            ],
            "commands": [
                "workbench.action.tasks.build"
            ]
        },
        {
            "before": [
                "<leader>",
                "c",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        // files
        {
            "before": [
                "<leader>",
                "f",
                "e"
            ],
            "commands": [
                "workbench.view.explorer"
            ]
        },
        // git
        {
            "before": [
                "<leader>",
                "g",
                "g"
            ],
            "commands": [
                "magit.status"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "d"
            ],
            "commands": [
                "magit.diff-file"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "b"
            ],
            "commands": [
                "magit.blame-file"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "l"
            ],
            "commands": [
                "magit.log-file"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "r"
            ],
            "commands": [
                "magit.branching"
            ]
        },
        // search
        {
            "before": [
                "<leader>",
                "s",
                "d"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        // windows
        {
            "before": [
                "<leader>",
                "w",
                "s"
            ],
            "commands": [
                "workbench.action.splitEditorDown"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "v"
            ],
            "commands": [
                "workbench.action.splitEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "o",
                "t"
            ],
            "commands": [
                "workbench.action.terminal.new"
            ]
        },
    ],
    // C#
    "csharp.inlayHints.parameters.enabled": true,
    "csharp.inlayHints.types.enabled": true,
    "csharp.inlayHints.types.forImplicitVariableTypes": true,
    "csharp.inlayHints.parameters.forLiteralParameters": true,
    "csharp.inlayHints.parameters.forObjectCreationParameters": true,
    "csharp.inlayHints.parameters.forOtherParameters": true,
    //HTML
    "html.format.indentInnerHtml": true,
}
